<Window x:Class="wpfProjectNewsReader.View.OpenSavedSessionPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfProjectNewsReader.View"
        mc:Ignorable="d"
        Title="OpenSavedSessionPrompt" Height="150" Width="250">
    
    <StackPanel
        Orientation="Vertical"
        Background="#2b2e3b">
        <TextBlock Text="Enter pin to open saved session."
                   HorizontalAlignment="Center"
                   Margin="0, 20, 0, 5"
                   Foreground="#c4c7d4"/>
        <PasswordBox Name="PinBox"
                 Margin="40, 5"/>
        <DockPanel>
            <Button Content="Login"
                    Width="50"
                    Margin="60, 5, 0, 5"
                    HorizontalAlignment="Left"
                    Click="Login_Click"
                    Background="#4c5067"
                    Foreground="#c4c7d4"/>
            <Button Content="Cancel"
                    Width="50"
                    Margin="0, 5, 60, 5"
                    HorizontalAlignment="Right"
                    Click="Cancel_Click"
                    Background="#4c5067"
                    Foreground="#c4c7d4"/>
        </DockPanel>
    </StackPanel>
</Window>
