<Window x:Class="wpfProjectNewsReader.View.SaveSessionPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfProjectNewsReader.View"
        mc:Ignorable="d"
        Title="SaveSessionPrompt" Height="150" Width="250" Name="SaveSessionPromt">
    <StackPanel
        Orientation="Vertical"
        Background="#2b2e3b">
        <TextBlock Text="Enter a pin to save session."
                   HorizontalAlignment="Center"
                   Margin="0, 20, 0, 5"
                   Foreground="#c4c7d4"/>
        <PasswordBox
            Name="PinBox"
                 Margin="40, 5"/>
        <DockPanel>
            <Button Content="Save"
                    Width="50"
                    Margin="60, 5, 0, 5"
                    HorizontalAlignment="Left"
                    Background="#4c5067"
                    Foreground="#c4c7d4" Click="Save_Click"/>
            <Button Content="Cancel"
                    Width="50"
                    Margin="0, 5, 60, 5"
                    HorizontalAlignment="Right"
                    Click="Cancel_Click"
                    Background="#4c5067"
                    Foreground="#c4c7d4"/>
        </DockPanel>
    </StackPanel>
</Window>
