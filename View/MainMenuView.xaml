<UserControl x:Class="wpfProjectNewsReader.View.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpfProjectNewsReader.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1500">
    <Grid
        Background="#2b2e3b">
        <TabControl Background="#989cb3" Margin="20">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0" BorderBrush="#4c5067" Margin="2, 0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="20, 2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#989cb3"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#4c5067"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="22"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Read">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <DockPanel
                                Grid.Row="0">
                        <Label 
                                    Content="Favorites"
                                    FontSize="28"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="15, 5"
                            DockPanel.Dock="Top"/>
                        <ListBox
                            Name="FavoriteListBox"
                            DockPanel.Dock="Bottom"
                                    Margin="25, 5, 25, 20"
                                    VerticalAlignment="Stretch"
                                    ItemsSource="{Binding Favorites}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </DockPanel>

                    <Grid
                                Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="9*"/>
                        </Grid.RowDefinitions>

                        <DockPanel
                                    Grid.Row="0">
                            <ComboBox
                                VerticalContentAlignment="Center"
                                        Width="800"
                                        Margin="25, 15, 15, 15"
                                        ItemsSource="{Binding Headlines}"
                                        DockPanel.Dock="Left"
                                SelectedItem="{Binding CurrentArticleNumber}">
                            </ComboBox>
                        </DockPanel>

                        <TextBox
                            Name="ArticleContainer"
                            Text="{Binding Article}"
                                    Grid.Row="1"
                                    Margin="25, 10"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Post">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel
                            Grid.Column="1">
                            
                        </DockPanel>
                        <Label
                                    Content="Favorites"
                                    FontSize="28"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Column="1"/>

                        <ListBox
                                    Grid.Row="1"
                                    Margin="25,5,25,5"
                                    ItemsSource="{Binding Favorites}" Grid.ColumnSpan="2">
                            
                        </ListBox>

                        <Button
                                    Grid.Row="2"
                                    Margin="10"
                                    Content="Post"
                                    Width="150" Grid.Column="1"/>
                    </Grid>

                    <Grid
                                Grid.Column="4">
                        <TextBox
                                    Grid.Row="1"
                                    Margin="25"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Favorites">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="12*"/>
                        </Grid.RowDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Margin="10"
                            VerticalContentAlignment="Center"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <ListBox
                            x:Name="FilteredListBox"
                            SelectionMode="Multiple"
                            
                            Grid.Row="1"
                            Margin="10"
                            ItemsSource="{Binding FilteredGroups}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding .}">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick"
                                                          Command="{Binding DeselectItems}"
                                                          CommandParameter="{Binding ElementName=FilteredListBox}"/>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Grid
                        Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Content="Favorites"
                            FontSize="28"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"/>
                        <ListBox
                            SelectionMode="Multiple"
                            Name="FavListBox"
                            Grid.Row="1"
                            Margin="20"
                            ItemsSource="{Binding Favorites}"/>
                        <StackPanel
                            Grid.Row="2"
                            Orientation="Horizontal">
                            <Button
                                Content="Download"
                                Margin="0, 0, 5, 15"
                                Width="125"
                                Command="{Binding DownloadGroups}"/>
                            <Button
                                Content="Add to Favorites"
                                Margin="5, 0, 5, 15"
                                Width="180"
                                Command="{Binding AddToFavorites}"
                                CommandParameter="{Binding ElementName=FilteredListBox}"/>
                            <Button
                                Content="Remove from Favorites"
                                Margin="5, 0, 5, 15"
                                Width="250"
                                Command="{Binding RemoveFromFavorites}"
                                CommandParameter="{Binding ElementName=FavListBox}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
